border-1px($color)
  position relative
  &:after
    display block
    content ''
    position absolute
    left 0
    bottom 0
    width 100%
    border-top 1px solid $color
border-r-1px($color)
  position relative
  &:after
    display block
    content ''
    position absolute
    right 0
    bottom 0
    height 100%
    border-right 1px solid $color
border-none()
  position relative
  &:after
    display none
bg-image($url)
  background-image url($url + '@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image url($url + '@3x.png')